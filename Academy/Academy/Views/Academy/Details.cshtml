@model Academy.Models.Treino

@{
    ViewData["Title"] = "Details";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1>Details</h1>

<div>
    <h4>Treino</h4>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Nome</th>
                    <th>Descricao</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Exercicios)
                {
                    <tr>
                        <td>@item.Categoria</td>
                        <td>@item.Nome</td>
                        <td>@item.Descricao</td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <h4>Aluno</h4>
            <hr/>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno.DataNascimento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno.DataNascimento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno.Instagram)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno.Instagram)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno.Telefone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno.Telefone)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno.Observacoes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno.Observacoes)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aluno.PersonalId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aluno.PersonalId)
                </dd>
                
            </dl>

        </div>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.TreinoId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>


